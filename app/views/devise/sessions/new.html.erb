<div class="contents row">
  <div class="container">
    <h2 class="text-2xl text-center">Log in</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'p-3 flex flex-col items-center', local: true do |f| %>
    <div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center py-4">
          <%= f.check_box :remember_me, class: "mx-2" %><%= f.label :remember_me %>
        </div>
      <% end -%>
      <div class="text-center m-2 px-6 py-3 bg-blue-300 rounded-md text-white hover:bg-blue-700 cursor-pointer transition-all duration-300">
        <%= f.submit "Log in" %>
      </div>
    </div>
    <% end %>
  </div>
</div>