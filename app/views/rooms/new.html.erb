      <div class='chat-room-form__field--right flex py-3'>
        <%= f.submit "作成する", class: 'chat-room-form__action-btn block px-3 py-2 bg-gray-300 rounded-md text-white hover:bg-blue-700 cursor-pointer transition-all duration-300'%>
        <%= link_to "プロジェクト一覧", rooms_path, class: "block mx-3 px-3 py-2 bg-gray-300 rounded-md text-white hover:bg-blue-700 cursor-pointer transition-all duration-300" %>
