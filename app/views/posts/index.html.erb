<%= form_with url: "/posts", method: :post, id: "form", remote: true do |form| %>
  <div class="lg:flex justify-left flex-wrap">
    <div class="py-4 basis-1/3 px-3">
      <%= form.label "post[title]", "タイトル", class: "text-2xl block py-2" %>
      <%= form.text_field "post[title]", id: "title", class: "w-full" %>
    </div>
    <div class="py-4 px-3">
      <%= form.label "post[pic]", "担当者", class: "text-2xl block py-2" %>
      <%= form.select "post[pic]", [["蛭川光樹", "蛭川光樹"], ["--", "--"]], selected: "蛭川光樹", id: "pic", class: "w-full" %>
    </div>
    <div class="py-4 px-3">
      <%= form.label "post[status]", "ステータス", class: "text-2xl block py-2" %>
      <%= form.select "post[status]", [["継続", "継続"], ["解決", "解決"], ["記録のみ", "記録のみ"]], selected: "記録のみ", id: "status", class: "w-full" %>
    </div>
    <div class="py-4 basis-full px-3">
      <%= form.label "post[content]", "詳細", class: "text-2xl block py-2" %>
      <%= form.text_area "post[content]", rows: 7, id: "content", class: "w-full" %>
    </div>
  </div>
  <div class="flex justify-end px-3 pb-4">
    <%= form.submit '投稿する', id: "submit", class:"block px-6 py-3 bg-blue-300 rounded-md text-white hover:bg-blue-700 cursor-pointer transition-all duration-300" %>
  </div>
<% end %>

<hr>
<button id="ongoing-button" class="block px-6 py-3 bg-blue-300 rounded-md text-white hover:bg-blue-700 cursor-pointer transition-all duration-300">継続を表示</button>
<div id="list">
</div>
<% @posts.each do |post| %>
  <div class="post" data-post-id="<%= post.id %>">
    <div class="post-date">
      ID：<%= post.id %>
    </div>
    <div class="post-date">
      記入日：<%= post.posted_at %>
    </div>
    <div class="post-date">
      タイトル：<%= post.title %>
    </div>
    <div class="post-content">
      担当者：<%= post.pic %>
    </div>
    <div class="post-content">
      ステータス：<%= post.status %>
    </div>
    <div class="post-content">
      詳細：<%= post.content %>
    </div>
    <button class="delete-button" data-post-id="<%= post.id %>">削除</button>
  </div>
<% end %>